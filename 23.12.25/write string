class Solution {
    public int[] numberOfLines(int[] widths, String s) {
        int lines = 1;        // at least one line
        int currWidth = 0;    // width of current line

        for (char c : s.toCharArray()) {
            int w = widths[c - 'a']; // width of current character

            if (currWidth + w > 100) {
                // move to next line
                lines++;
                currWidth = w;
            } else {
                currWidth += w;
            }
        }

        return new int[]{lines, currWidth};
    }
}
