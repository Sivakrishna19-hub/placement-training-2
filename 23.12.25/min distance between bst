class Solution 
{
    int min = Integer.MAX_VALUE;
    public int minDiffInBST(TreeNode root) 
    {
        operation(root);
        return min;
    }
    public void operation(TreeNode root)
    {
        if(root == null) return;

        operation(root.left);
        operation(root.right);

        check(root.left, root.val);
        check(root.right, root.val);
    } 
    public void check(TreeNode root, int ele)
    {
        if(root == null) return;

        check(root.left, ele);
        check(root.right, ele);

        min = Math.min(min, Math.abs(ele - root.val));
    } 
}
