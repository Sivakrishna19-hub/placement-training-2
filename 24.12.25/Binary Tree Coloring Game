class Solution {
    int k=0;
    int rightL=0;
    int leftL=0;
    public boolean btreeGameWinningMove(TreeNode root, int n, int x) {
        
        search(root,x);
        int l=n-k;
        if(l>k) return true;
        if(rightL>(leftL+1+l) || leftL>(rightL+1+l)) return true;
        return false;
    }
    public int search(TreeNode root,int x){

        if(root.left==null && root.right==null){
            return 1;
        }
        int left=0;
        if(root.left!=null){
            left+=search(root.left,x);
        }
        int right=0;
        if(root.right!=null){
            right+=search(root.right,x);
        }
        
        if(root.val==x){
            k=1+right+left;
            rightL=right;
            leftL=left;
        }
        
        return 1+right+left;


    }
}
